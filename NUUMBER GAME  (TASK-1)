import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {

    private static final int MIN = 1;
    private static final int MAX = 100;
    private static final int MAX_ATTEMPTS = 5;

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        Random rng = new Random();

        int roundsPlayed = 0;
        int totalScore = 0;

        System.out.println("ðŸŽ®  Welcome to the Number Guessing Game!");

        while (true) {
            roundsPlayed++;
            int secret = rng.nextInt(MAX - MIN + 1) + MIN;
            boolean guessedCorrectly = false;

            System.out.printf("%nRound %d â€“ guess the number (%dâ€‘%d)%n", roundsPlayed, MIN, MAX);

            for (int attempt = 1; attempt <= MAX_ATTEMPTS; attempt++) {
                System.out.printf("Attempt %d/%d â†’ ", attempt, MAX_ATTEMPTS);
                int guess;

                try {
                    guess = Integer.parseInt(sc.nextLine().trim());
                } catch (NumberFormatException e) {
                    System.out.println("  âš ï¸  Please type a valid integer.");
                    attempt--;
                    continue;
                }

                if (guess == secret) {
                    System.out.printf("  ðŸŽ‰ Correct in %d attempt%s!%n", attempt, attempt == 1 ? "" : "s");
                    int roundScore = MAX_ATTEMPTS - attempt + 1;
                    totalScore += roundScore;
                    System.out.printf("  +%d point%s this round%n", roundScore, roundScore == 1 ? "" : "s");
                    guessedCorrectly = true;
                    break;
                } else if (guess < secret) {
                    System.out.println("  Too low!");
                } else {
                    System.out.println("  Too high!");
                }
            }

            if (!guessedCorrectly) {
                System.out.printf("âŒ  Out of attempts! The number was %d.%n", secret);
            }

            System.out.print("\nPlay another round? (yes/no): ");
            if (!sc.nextLine().trim().equalsIgnoreCase("yes")) {
                break;
            }
        }

        System.out.printf("%nðŸ  Game Over â€“ Rounds: %d  |  Total Score: %d%n", roundsPlayed, totalScore);
        System.out.println("Thanks for playing!");

        sc.close();
    }
}
